@using Shofy_Crud.ViewModels.Accounts

@model LoginVM

<div class="container mt-5">
    <div class="register mb-5" style="width:50%; margin: 0 auto;">
        <div class="row">
            <h1>Sign in</h1>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <form method="post" asp-action="SignIn">
                <div class="form-row">
                    <label for="inputAddress">Email or Username</label>
                    <input asp-for="EmailOrUsername" autocomplete="off" class="form-control" id="inputAddress">
                    <span class="text-danger" asp-validation-for="EmailOrUsername"></span>
                </div>
                <div class="form-row">
                    <label for="inputAddress">Password</label>
                    <input asp-for="Password" autocomplete="off" class="form-control" id="inputAddress">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <button type="submit" class="btn btn-primary mt-3 text-center">Sign in</button>
            </form>
            <a asp-action="SignUp">Go to sing up</a>
        </div>
    </div>
</div>